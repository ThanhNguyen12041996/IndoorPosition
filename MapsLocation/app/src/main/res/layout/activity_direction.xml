<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="380dp"
    android:layout_height="145dp"
    android:background="@color/colorPrimary"
    android:content="@+id/content"
    android:handle="@+id/handle">

    <EditText
        android:id="@+id/edit_textSource"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:gravity="left"
        android:inputType="text|textFilter"
        android:onClick="onClick"
        android:text="Your Location"
        android:textColor="@color/colorAccent" />

    <EditText
        android:id="@+id/edit_Destination"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edit_textSource"
        android:gravity="left"
        android:inputType="text|textFilter"
        android:onClick="onClick"
        android:text="Your Destination"
        android:textColor="@color/colorAccent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_Destination"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/button2"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="13dp"
        android:background="@android:drawable/ic_menu_send"
        android:backgroundTint="@color/wallet_link_text_light" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp"
        android:background="@android:color/holo_orange_light"
        app:srcCompat="@android:drawable/ic_menu_myplaces"
        android:layout_alignBottom="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_light"
        app:srcCompat="@android:drawable/ic_menu_recent_history"
        android:layout_below="@+id/edit_Destination"
        android:layout_alignEnd="@+id/edit_Destination" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@+id/imageView"
        android:text="m"
        android:textColor="@color/colorAccent"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignStart="@+id/button3"
        android:text="minutes"
        android:textColor="@color/colorAccent"
        android:textSize="14dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="5dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView4"
        android:background="@drawable/mr_dialog_close_light"
        android:backgroundTint="@android:color/holo_red_dark" />

</RelativeLayout>
